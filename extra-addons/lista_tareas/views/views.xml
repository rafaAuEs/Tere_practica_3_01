<odoo>
    <data>
        <record model="ir.ui.view" id="lista_tareas.list">
            <field name="name">lista_tareas.list</field>
            <field name="model">lista_tareas.lista_tareas</field>
            <field name="arch" type="xml">
                <list decoration-danger="urgente == True" decoration-success="realizada == True">
                    <field name="tarea"/>
                    <field name="prioridad"/>
                    <field name="urgente" widget="boolean_toggle"/>
                    <field name="fecha_limite"/>
                    <field name="realizada"/>
                    <field name="estado" widget="badge" decoration-info="estado == 'en_progreso'"/>
                </list>
            </field>
        </record>

        <record model="ir.ui.view" id="lista_tareas.form">
            <field name="name">lista_tareas.form</field>
            <field name="model">lista_tareas.lista_tareas</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="estado" widget="statusbar" options="{'clickable': '1'}"/>
                    </header>
                    <sheet>
                        <group>
                            <group string="InformaciÃ³n Principal">
                                <field name="tarea"/>
                                <field name="prioridad"/>
                            </group>
                            <group string="Plazos y Control">
                                <field name="fecha_limite"/>
                                <field name="urgente"/>
                                <field name="realizada"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="DescripciÃ³n" name="description">
                                <field name="descripcion" placeholder="Detalla la tarea aquÃ­..."/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="lista_tareas.action_window">
            <field name="name">Mis Tareas Pendientes</field>
            <field name="res_model">lista_tareas.lista_tareas</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem name="Lista de Tareas" id="lista_tareas.menu_root" web_icon="base,static/description/icon.png"/>

        <menuitem name="GestiÃ³n" id="lista_tareas.menu_1" parent="lista_tareas.menu_root"/>

        <menuitem name="Ver Tareas" id="lista_tareas.menu_1_list" 
                  parent="lista_tareas.menu_1" 
                  action="lista_tareas.action_window"/>
    </data>
</odoo>